<!DOCTYPE html>
<html>
  <head>
    <title>Instaview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      <% if logged_in? %>
        window.currentUser = <%= render(
          "api/users/user.json.jbuilder",
          user: current_user
        ).html_safe %>
      <% end %>
      window.photo1 = "<%= image_url('photo-1.jpg') %>"
      window.photo2 = "<%= image_url('photo-2.jpg') %>"
      window.photo3 = "<%= image_url('photo-3.jpg') %>"
      window.photo4 = "<%= image_url('photo-4.jpg') %>"
      window.photo5 = "<%= image_url('photo-5.jpg') %>"
      window.photo6 = "<%= image_url('photo-6.jpg') %>"
      window.spinner = "<%= image_url('spinner.gif') %>"
    </script>

    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Elsie" rel="stylesheet">
    <link rel="shortcut icon" type="image/png" href="<%=  image_url("favicon.png") %>"/>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
